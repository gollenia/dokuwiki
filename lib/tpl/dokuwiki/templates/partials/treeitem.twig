{% for item in items %}
	<li class="tree-item {{item.children ? 'folder' : 'file'}} {{item.id == id ? 'active'}} {% if item.id in namespaces %}open{% endif %} ">
		<span>

			{% if item.children %}
				<i class='material-icons chevron'>chevron_right</i>


			{% endif %}

			<a href="/{{ item.id }}">
				{% if item.children %}

					<svg version="1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewbox="0 0 48 48" enable-background="new 0 0 48 48">
						<path fill="#FFA000" d="M40,12H22l-4-4H8c-2.2,0-4,1.8-4,4v8h40v-4C44,13.8,42.2,12,40,12z"/>
						<path fill="#FFCA28" d="M40,12H8c-2.2,0-4,1.8-4,4v20c0,2.2,1.8,4,4,4h32c2.2,0,4-1.8,4-4V16C44,13.8,42.2,12,40,12z"/>
					</svg>
				{% else %}
					<svg version="1" width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 48 48" enable-background="new 0 0 48 48">
						<polygon fill="#FFFFFF" points="40,45 8,45 8,3 30,3 40,13"/>
						<polygon fill="#EEEEEE" points="38.5,14 29,14 29,4.5"/>
					</svg>
				{% endif %}
				{{ item.title }}</a>
		</span>
		{% if item.children %}
			<ul class="tree">
				{% include "partials/treeitem.twig" with {'items': item.children} %}
			</ul>
		{% endif %}
	</li>
{% endfor %}
